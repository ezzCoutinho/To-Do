generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("BETTER_AUTH_URL")
}

model User {
  id        String  @id @default(uuid())
  name      String?
  email     String? @unique
  password  String?  // Se for usar login via credenciais
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
